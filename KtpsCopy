# Function for Uninstall
uninstall_menu() {
    clear
    header
    echo -e "\033[1;33m[ UNINSTALL ]\033[0m"
    echo -e "\033[1;37m"
    echo "‚ö†Ô∏è  Are you sure want to uninstall?"
    echo "[1] Yes, uninstall"
    echo "[2] No, back to menu"
    echo -e "\033[0m"
    footer
    read -p "[*] Choose : " uninstall_choice
    case $uninstall_choice in
        1) 
            echo "Uninstalling Ktps Growtopia Tools..."
            sleep 2
            echo "Uninstall complete!"
            exit 0
            ;;
        2) main_loop ;;
        *) main_loop ;;
    esac
}

# Main loop function
main_loop() {
    while true; do
        header
        main_menu
        footer
        read -p "[*] Choose : " choice
        
        case $choice in
            1) show_growtopia_tips ;;
            2) wa_owner ;;
            3) find_item ;;
            4) about_menu ;;
            5) uninstall_menu ;;
            0) 
                echo "Thank you for using Ktps Growtopia Tips!"
                echo "Happy farming! üå±"
                exit 0 
                ;;
            *) 
                echo "Invalid choice! Please try again."
                sleep 2
                ;;
        esac
    done
}

# Initialize the menu
main_loop
